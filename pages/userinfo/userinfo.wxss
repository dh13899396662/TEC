.avator-wrap {
	width: 620rpx;
	border-bottom: 2rpx solid #eee;
	padding: 40rpx 0 65rpx;
	display: flex;
}

.avator-img {
	width: 200rpx;
	height: 200rpx;
	border: 4rpx solid #fff;
	border-radius: 100rpx;
	box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, .15);
	box-sizing: border-box;
	overflow: hidden;
}

.avator-img > image {
	width: 200rpx;
	height: 200rpx;
}

.avator-handle {
	width: 200rpx;
	height: 60rpx;
	padding: 70rpx 0;
	margin-left: 100rpx;
}

.avator-btn {
	text-align: center;
}

.avator-btn > i {
	width: 68rpx;
	height: 68rpx;
	line-height: 66rpx;
	background-color: #3dad68;
	font-size: 36rpx;
	color: #fff;
	text-align: center;
	border-radius: 34rpx;
	display: inline-block;
}

.avator-btn > text {
	font-size: 28rpx;
	color: #999;
	padding-left: 20rpx;
}

.info-item {
	width: 620rpx;
	box-sizing: border-box;
	padding: 70rpx 10rpx 0;
	border-bottom: 2rpx solid #eee;
}

.info-title {
	font-size: 26rpx;
	color: #999;
}

.info-input {
	height: 80rpx;
	padding: 20rpx 0;
}

.info-input input {
	height: 80rpx;
	font-size: 32rpx;
}

.info-btn {
	width: 620rpx;
	height: 90rpx;
	line-height: 90rpx;
	background-color: #3dad68;
	font-size: 32rpx;
	color: #fff;
	text-align: center;
	border-radius: 45rpx;
	box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, .15);
	margin-top: 70rpx;
}
