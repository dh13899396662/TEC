/**attendance.wxss**/
.attend-no-data {
	font-size: 32rpx;
	text-align: center;
	padding: 200rpx 100rpx;
}

.attend-wrap {
	padding: 40rpx 50rpx;
}

.attend-head {
	width: 650rpx;
	position: relative;
	z-index: 1;
}

.attend-infos {
	width: 650rpx;
	height: 200rpx;
	background: -webkit-linear-gradient(7deg, #3dad68, #8edd78);
	background: linear-gradient(7deg, #3dad68, #8edd78);
	border-radius: 20rpx;
	box-sizing: border-box;
	box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, .08);
	padding: 30rpx;
	display: flex;
}

.attend-info-left {
	width: 410rpx;
}

.attend-info-title {
	height: 40rpx;
	line-height: 40rpx;
	font-size: 32rpx;
	color: #fff;
}

.attend-info-name {
	height: 70rpx;
	line-height: 25rpx;
	font-size: 24rpx;
	color: rgba(255, 255, 255, .55);
	padding: 10rpx 0;
	box-sizing: border-box;
}

.attend-info-time {
	height: 30rpx;
	line-height: 30rpx;
	font-size: 26rpx;
	font-weight: bold;
	color: rgba(255, 255, 255, .75);
}

.attend-info-right {
	width: 180rpx;
	text-align: center;
}

.attend-info-total {
	height: 75rpx;
	line-height: 60rpx;
	font-size: 48rpx;
	color: #fff;
	padding-top: 15rpx;
}

.attend-info-total > text {
	font-size: 26rpx;
	padding-left: 10rpx;
}

.attend-info-btn {
	width: 140rpx;
	height: 40rpx;
	line-height: 40rpx;
	background-color: rgba(0, 0, 0, .15);
	font-size: 24rpx;
	color: #fff;
	border-radius: 20rpx;
	display: inline-block;
}

.attend-all-btn {
	position: absolute;
	z-index: 2;
	left: 220rpx;
	top: 168rpx;
	width: 210rpx;
	height: 64rpx;
	line-height: 64rpx;
	background-color: #fe8f36;
	font-size: 26rpx;
	color: #fff;
	text-align: center;
	border-radius: 32rpx;
	box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, .08);
}

.attend-student-list {
	width: 650rpx;
	padding: 20rpx 0;
}

.attend-student-item {
	border-bottom: 2rpx solid #f2f2f2;
	padding: 40rpx 20rpx;
	display: flex;
}

.attend-student-info {
	width: 490rpx;
}

.attend-student-name {
	line-height: 60rpx;
	font-size: 36rpx;
}

.attend-student-name > text {
	font-weight: bold;
	color: #111;
}

.attend-student-name > i {
	font-size: 24rpx;
	vertical-align: text-top;
}

.attend-student-name > i.icon-nan {
	color: #00a0e9;
}

.attend-student-name > i.icon-nv-copy {
	color: #ea68a2;
}

.attend-student-status {
	font-size: 22rpx;
	border-radius: 8rpx;
	padding: 6rpx 14rpx;
	display: inline-block;
}

.attend-student-status.noattend {
	background-color: #eee;
	color: #999;
}

.attend-student-status.attended {
	background-color: #d1efc9;
	color: #3dad68;
}

.attend-student-handle {
	width: 160rpx;
}

.attend-btn {
	width: 160rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 32rpx;
	color: #fff;
	text-align: center;
	border-radius: 30rpx;
}

.attend-btn.disable {
	opacity: .35;
}

.attend-btn.disable > i {
	font-size: 34rpx;
}

.attend-btn-cancel {
	font-size: 24rpx;
	color: #c3d3c9;
	text-align: center;
	padding-top: 20rpx;
}

