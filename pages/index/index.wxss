/**index.wxss**/
.banner-wrap {
	background-color: #3dad68;
	border-radius: 0 0 20rpx 20rpx;
}
.banner-wrap,
.banner-wrap image{
	width: 750rpx;
	height: 260rpx;
}

.notice-wrap {
	width: 690rpx;
	height: 80rpx;
	background-color: #fff;
	border-radius: 20rpx;
	padding: 20rpx 30rpx;
	box-sizing: border-box;
	box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, .08);
	display: flex;
	position: relative;
	z-index: 2;
	top: -40rpx;
}

.notice-head {
	width: 168rpx;
	line-height: 40rpx;
	font-size: 24rpx;
	border-right: 2rpx solid #e9e9e9;
}

.notice-head > i {
	font-size: 23rpx;
}

.notice-head > text {
	font-weight: bold;
	color: #000;
	padding: 0 10rpx;
}

.notice-swiper {
	width: 510rpx;
	padding-left: 20rpx;
}

.notice-swiper swiper {
	height: 40rpx;
}

.notice-swiper .swiper-item {
	height: 40rpx;
	line-height: 40rpx;
	font-size: 24rpx;
	word-break: break-all;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

.statistics-wrap {
	width: 690rpx;
	background-color: #f0f8f4;
	border-radius: 20rpx;
	padding: 30rpx 0;
	box-sizing: border-box;
	display: flex;
}

.statistics-item {
	width: 50%;
	text-align: center;
	box-sizing: border-box;
}

.statistics-item:first-child {
	border-right: 2rpx solid #e0f1e8;
}

.statistics-data {
	font-weight: bold;
	vertical-align: bottom;
}

.statistics-data > b {
	font-size: 44rpx;
}

.statistics-data > text {
	font-size: 26rpx;
	padding-left: 10rpx;
}

.statistics-name {
	font-size: 22rpx;
}

.curriculum-wrap {
	width: 750rpx;
	box-sizing: border-box;
	margin-top: 50rpx;
	padding: 0 50rpx 40rpx;
}

.curriculum-head {
	display: flex;
}

.curriculum-head-title,
.curriculum-head-more {
	line-height: 40rpx;
}
.curriculum-head-title {
	width: 65%;
	font-size: 32rpx;
	text-align: left;
}

.curriculum-head-title i {
	font-size: 30rpx
}

.curriculum-head-title text {
	font-weight: bold;
	color: #000;
	padding-left: 10rpx;
}

.curriculum-head-more {
	width: 35%;
	font-size: 24rpx;
	color: #666;
	text-align: right;
}

.curriculum-body {
	padding: 10rpx 0;
}

.curriculum-item {
	border-bottom: 2rpx solid #f4f6fa;
	padding: 40rpx 0;
	display: flex;
}

.curriculum-item-info {
	width: 65%;
}

.curriculum-item-name {
	font-size: 28rpx;
	font-weight: bold;
}

.curriculum-item-num {
	font-size: 24rpx;
	color: #a3ada8;
	padding-top: 10rpx;
}

.curriculun-item-data {
	width: 35%;
	font-size: 30rpx;
	font-weight: bold;
	text-align: right;
}












